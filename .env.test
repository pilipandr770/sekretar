# Testing Environment Configuration
# This file is used for automated testing environments

# Flask Configuration
FLASK_ENV=testing
FLASK_APP=app
SECRET_KEY=test-secret-key-not-for-production
JWT_SECRET_KEY=test-jwt-secret-key-not-for-production

# Database Configuration - Use isolated test databases
TEST_DATABASE_URL=sqlite:///:memory:
DATABASE_URL=sqlite:///:memory:

# Disable external services for testing
REDIS_URL=memory://
CELERY_BROKER_URL=memory://
CELERY_RESULT_BACKEND=memory://

# Disable external API calls for testing
OPENAI_API_KEY=test-key
GEMINI_API_KEY=test-key
STRIPE_SECRET_KEY=sk_test_fake_key
STRIPE_PUBLISHABLE_KEY=pk_test_fake_key

# Testing-specific settings
TESTING=true
WTF_CSRF_ENABLED=false
JWT_ACCESS_TOKEN_EXPIRES=false

# Disable health checks for testing
HEALTH_CHECK_DATABASE_ENABLED=false
HEALTH_CHECK_REDIS_ENABLED=false
TENANT_MIDDLEWARE_ENABLED=false

# Fast initialization for tests
DATABASE_POOL_SIZE=1
DATABASE_MAX_OVERFLOW=0
DATABASE_CONNECTION_TIMEOUT=5

# Logging for tests
LOG_LEVEL=WARNING
LOG_FORMAT=text

# Disable external service detection for tests
SERVICE_DETECTION_ENABLED=false
DATABASE_DETECTION_ENABLED=false
CACHE_DETECTION_ENABLED=false
EXTERNAL_SERVICE_DETECTION_ENABLED=false

# SQLite test configuration
SQLITE_TIMEOUT=5
SQLITE_CHECK_SAME_THREAD=false
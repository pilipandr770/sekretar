root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{js,jsx,ts,tsx,json,yaml,yml}]
indent_size = 2

[*.{html,css,scss}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{ps1,psm1}]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

[Dockerfile*]
indent_size = 2
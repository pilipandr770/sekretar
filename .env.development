# Development Environment Configuration
# This file contains development-specific settings with SQLite auto-creation

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production

# Database Configuration - SQLite with auto-creation
DATABASE_URL=sqlite:///ai_secretary_dev.db
SQLITE_DATABASE_URL=sqlite:///ai_secretary_dev.db
TEST_DATABASE_URL=sqlite:///ai_secretary_test.db

# Auto-creation settings for development
DATABASE_AUTO_CREATE=true
DATABASE_AUTO_MIGRATE=true
DATABASE_AUTO_SEED=true

# Development database settings
SQLITE_TIMEOUT=20
SQLITE_CHECK_SAME_THREAD=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_CONNECTION_TIMEOUT=30

# Redis Configuration for development
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Development logging
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# Enable service detection for development
SERVICE_DETECTION_ENABLED=true
DATABASE_DETECTION_ENABLED=true
POSTGRESQL_FALLBACK_ENABLED=true
SQLITE_FALLBACK_ENABLED=true

# Cache service detection
CACHE_DETECTION_ENABLED=true
REDIS_FALLBACK_ENABLED=true
SIMPLE_CACHE_FALLBACK=true

# External service detection
EXTERNAL_SERVICE_DETECTION_ENABLED=true
EXTERNAL_SERVICE_TIMEOUT=10

# Configuration validation
CONFIG_VALIDATION_ENABLED=true
CONFIG_VALIDATION_STRICT=false

# Development-specific features
DEBUG=true
TEMPLATES_AUTO_RELOAD=true
SEND_FILE_MAX_AGE_DEFAULT=1

# File upload settings for development
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Rate limiting for development (more lenient)
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/3

# Application settings
APP_NAME=AI Secretary (Development)
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Default language
DEFAULT_LANGUAGE=en